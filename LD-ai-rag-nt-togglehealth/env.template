# =============================================================================
# HALLUCINATION TRACKER - UNIFIED ENVIRONMENT CONFIGURATION
# =============================================================================
# This .env file is shared between frontend and backend
# Copy this to .env and fill in your actual values

# =============================================================================
# LAUNCHDARKLY CONFIGURATION
# =============================================================================

# LaunchDarkly SDK Key (for server-side feature flags)
LAUNCHDARKLY_SDK_KEY=sdk-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# LaunchDarkly Project Key
LAUNCHDARKLY_PROJECT_KEY=your-project-key

# LaunchDarkly Environment Key
LAUNCHDARKLY_ENVIRONMENT_KEY=production

# LaunchDarkly API Token (for server-side operations)
LAUNCHDARKLY_API_TOKEN=api-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# =============================================================================
# AWS CONFIGURATION
# =============================================================================

# AWS Region
AWS_REGION=us-east-1

# AWS Credentials (if not using AWS SSO)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (for Drizzle ORM)
DB_URL=postgresql://username:password@localhost:5432/database_name

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Python Backend API URL (used by frontend)
PYTHON_API_URL=http://localhost:8000

# =============================================================================
# FRONTEND-SPECIFIC (NEXT_PUBLIC_* variables are exposed to browser)
# =============================================================================

# Frontend Industry Selection
# Set to one of: "banking", "health", "investment", "mental-health"
NEXT_PUBLIC_INDUSTRY=banking

# LaunchDarkly Client Key (for frontend) - NOT NEEDED ANYMORE
# NEXT_PUBLIC_LD_CLIENT_KEY=your-client-key

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# DynamoDB Table (if using DynamoDB feature store)
# DYNAMODB_TABLE=your-dynamodb-table

# Destination Environment (for flag copying)
# DESTINATIONENV=staging

# Project Key (for flag operations)
# PROJECT_KEY=your-project-key

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Node Environment
NODE_ENV=development

# Python Environment
PYTHON_ENV=development 