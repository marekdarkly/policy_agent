# LaunchDarkly Configuration (Required)
LAUNCHDARKLY_ENABLED=true
LAUNCHDARKLY_SDK_KEY=api-your-sdk-key-here

# LLM Provider Configuration
LLM_PROVIDER=bedrock
LLM_MODEL=claude-3-5-sonnet

# AWS Configuration (for Bedrock)
AWS_REGION=us-east-1
AWS_PROFILE=default

# Bedrock Knowledge Base IDs (Optional - for RAG)
# Leave empty to use structured databases only
BEDROCK_POLICY_KB_ID=
BEDROCK_PROVIDER_KB_ID=

# RAG Configuration (Optional)
RAG_TOP_K=5

# API Keys (required if using OpenAI/Anthropic)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
